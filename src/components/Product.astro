---
import { Image } from 'astro:assets';

interface Props {
  src: string;
  title: string;
  description: string;
  price?: number;
}

const { src, title, description, price } = Astro.props;
---
<article class="product">
  <div class="img-container">
    <Image src={src} alt={title} width="756" height="756" loading="lazy"/>
  </div>
  <div class="product-info">
    <span>{title}</span>
    <span>{description}</span>
  </div>
</article>
<style>
  .product {
    width: 250px;
    height: 300px;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: white;
    border-radius: 5%;
    margin: 20px 0px;
    box-shadow: 0 3px 1px -2px rgba(0, 0, 0, .2), 0 2px 2px 0 rgba(0, 0, 0, .14), 0 1px 5px 0 rgba(0, 0, 0, .12);

    .img-container {
      width: 184px;
      height: 200px;
      object-fit: cover;

      img {
        width: 100%;
        height: 100%;
        transition: 0.5s ease-in-out;
      }
    }
    
    .product-info {
      font-size: 14px;
      padding: 10px;
      box-sizing: border-box;
      color: black;
      line-height: 16px;
      display: flex;
      flex-direction: column;
      row-gap: 10px;
      text-align: center;
    }
  }
  .product:hover {
    img {
      transform: scale(110%);
    }
  }
</style>