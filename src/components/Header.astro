---
import { Image } from 'astro:assets';

interface Props {
  logo: string;
  links: any[];
}

const { logo, links } = Astro.props;
---

<div class="header">
  <a href="/" class="logo">
    <Image src={logo} alt="Kinil Kab logo" width="150" height="60" loading="eager"/>
  </a>
  <nav class="links-container">
    {
      links.map((link) => (
        <a href={"#" + link.route} class="link">
          {link.name}
        </a>
      ))
    }
  </nav>
</div>
<style>
  .header {
    background-color: #c65c2b;
    width: 100%;
    height: 64px;
    top: 0px;
    display: flex;
    flex-direction: row;
    padding: 0px 20px;
    box-shadow: 1px 1px 1px 0px gray;
    position: sticky;
    z-index: 100;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;

    .logo {
      width: 150px;
      height: auto;

      @media (width < 769px) {
        width: 100px;
        margin-right: 30px;
        img {
          width: 100%;
        }
      }
    }

    .links-container {
      width: 300px;
      max-width: 80%;
      display: inherit;
      flex-direction: row;
      justify-content: space-between;
      margin-right: 20px;
    }
    
    .link {
      color: white;
      font-size: 18px;
      font-weight: 700;
      text-decoration: none;

      @media (width < 769px) {
        font-size: 12px;
      }
    }
  }

</style>
