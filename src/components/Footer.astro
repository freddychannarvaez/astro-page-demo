---
import { Image } from 'astro:assets';
---
<section class="footer">
  <div class="socials">
    <a href="/">
      <Image src="/facebook.svg" alt="facebook" width="30" height="30"></Image>
    </a>
    <a href="/">
      <Image src="/instagram.svg" alt="instagram" width="30" height="30"></Image>
    </a>
  </div>
  <span>2024 Kinil Kab</span>
</section>
<style>
  .footer {
    width: 100vw;
    height: 80px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    row-gap: 10px;
    color: white;
    font-size: 16px;
    font-weight: 500;
    background-color: #c65c2b;
    box-shadow: 0 -5px 5px -4px gray;
    z-index: 100;

    .socials {
      display: inherit;
      flex-direction: row;
      justify-content: center;
      column-gap: 30px;
      text-decoration: none;
      color: white;
    }
  }
</style>